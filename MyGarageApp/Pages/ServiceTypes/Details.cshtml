@page
@model MyGarageApp.Pages.ServiceTypes.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<br />
<h2 class="text-info">Details of Service Type</h2>
<br />
<form method="post">
    <div class="backgroundwhite">
       
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ServiceType.Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="ServiceType.Name"disabled class="form-control " />
              
            </div>
           
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ServiceType.Price"></label>
            </div>
            <div class="col-5">
                <input asp-for="ServiceType.Price"disabled class="form-control" />
            </div>
           
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_DetailAndBackToListButton" />
            </div>
        </div>
    </div>
</form>













